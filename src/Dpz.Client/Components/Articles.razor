@using Dpz.Client.Models
@foreach (var item in Data)
{
    <MudCard Style="margin: 1em 0">
        @if (item.ImagesAddress.Any())
        {
            <MudCardMedia Image="@item.ImagesAddress.First()" Height="200"/>
        }
        <MudCardContent>
            <MudText Typo="Typo.h5" Style="line-height: 0;margin-bottom: .5em">
                <MudLink Href="@($"/article/read/{item.Id}")">@item.Title</MudLink>
            </MudText>
            @((MarkupString)item.Introduction)
        </MudCardContent>
        <MudCardActions>
            <MudTooltip Text="@item.CreateTime.ToString("yyyy/MM/dd HH:mm:ss")">
                <MudIcon Icon="@Icons.Material.Filled.AccessTime" Color="Color.Info" Size="Size.Small"/>
                <MudText Typo="Typo.caption" Style="margin-left: .3em;vertical-align: super">
                    @item.CreateTime.TimeAgo()
                </MudText>
            </MudTooltip>
            <MudBadge Content="@item.ViewCount" Color="Color.Primary" Overlap="true" Class="mx-6 my-4">
                <MudIcon Icon="@Icons.Material.Filled.RemoveRedEye" Color="Color.Info" Size="Size.Small"/>
            </MudBadge>
        </MudCardActions>
    </MudCard>
}

@code {

    [Parameter]
    public List<ArticleMiniModel> Data { get; set; }

}